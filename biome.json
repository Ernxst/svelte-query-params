{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			".DS_Store",
			".turbo",
			".svelte-kit/",
			".idea/",
			"node_modules/",
			"coverage/",
			"build/",
			"dist/",
			"vite.config.ts.*",
			"vitest.config.ts.*",
			"tsup.config.ts.*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"trailingComma": "es5"
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	}
}
