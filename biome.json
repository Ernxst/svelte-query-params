{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": [
			"examples/**/*",
			"packages/**/*",
			"package.json",
			"tsconfig.json"
		],
		"ignore": [
			".DS_Store",
			".turbo",
			".svelte-kit/",
			".idea/",
			"node_modules/",
			"coverage/",
			"build/",
			"dist/"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"ignore": [
			".gitignore",
			".DS_Store",
			".turbo",
			".svelte-kit/",
			".idea/",
			"node_modules/",
			"coverage/",
			"build/",
			"dist/",
			"*.log",
			"*.log*",
			"yarn.lock",
			"bun.lockb"
		]
	},
	"javascript": {
		"formatter": {
			"trailingComma": "es5"
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	}
}
